<div class="page-content profile-content">
  <div class="top-tab"><div class="top-tab-line"></div><div class="top-tab-line"></div></div>
  <div class="form-content">
    <%= form_for current_user, url: user_profile_path(current_user), remote: true do |f| %>
      <p>
        <%= f.label :name, 'Display name (public)' %>
        <%= f.text_field :name %>
      </p>
        <%= f.label :share_link, 'Share Link (public)' %>
        <%= content_tag(:div, current_user.share_link, class: 'like-input')  %>
      <p style="padding-top: 25px;">
        <%= f.submit 'Save Profile', class: 'btn wide', data: { disable_with: 'Save Profile' } %>
      </p>
      <div class="divider"></div>
      <p>
        <%= link_to 'Home', user_home_path(current_user), class: 'btn wide' %>
      </p>
      <p>
        <%= link_to 'User Search', user_search_path, class: 'btn wide' %>
      </p>
      <p>
        <%= link_to 'Logout', logout_path, class: 'btn wide' %>
      </p>
    <% end %>
  </div>
</div>