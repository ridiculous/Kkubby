<div class="page-content">
  <div class="login-form form-content">
    <%= form_tag(process_login_path, method: :post) do %>
      <%= hidden_field_tag :back_to, params[:back_to] %>
      <%= hidden_field_tag :remember_me, '1' %>
      <div>
        <%= label_tag(:username, 'Username', class: 'medium-major') %>
        <div>
          <%= text_field_tag(:username, params[:username], tabindex: 1) %>
        </div>
      </div>
      <div>
        <%= label_tag(:password, 'Password', class: 'medium-major') %>
        <div>
          <%= password_field_tag(:password, '', tabindex: 2) %>
        </div>
      </div>
      <div>
        <%= submit_tag('Login', class: 'btn wide', name: '', tabindex: 3) %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  document.getElementById('username').focus();
</script>
